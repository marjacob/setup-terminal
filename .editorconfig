root = true

[*]
charset = utf-8
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.iss]
indent_size = 2
indent_style = space
max_line_length = off

[*.md]
indent_size = 4
indent_style = space
trim_trailing_spaces = false

[*.py]
indent_size = 4
indent_style = space
